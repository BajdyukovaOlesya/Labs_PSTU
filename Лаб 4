#include <iostream>
#include <clocale>
using namespace std;
int k;
int main()
{
	setlocale(LC_ALL, "ru");
	int n = 7;
	srand(time(NULL));
	int *mas=new int [n];
	for (int i = 0; i < n; i++)
		mas[i] = rand()%9;
	for (int i = 0; i < n; i++)
		cout << mas[i];
	cout << endl;
	cout << "Введите номер элемента(1-7)";
	cin >> k;
	for (int i = k; i < n; i++) {
		mas[i-1] = mas[i];
	}
	n -=1;
	for (int i = 0; i < n; i++)
		cout << mas[i];
	for (int i = 0; i < n; i++) {
	if ((mas[i] % 2 ==0)&&(mas[i]!=0)) {
		n += 1;
		for (int j = n; j>i; j--) {
			mas[j] = mas[j-1];
		}
		mas[i + 1] = 0;
	}
	}
	for (int i = 0; i < n; i++)
		cout << mas[i];
         return 0;
}
