#include <iostream>
#include <clocale>
using namespace std;
int  p,n;

int main()
{
	setlocale(LC_ALL, "ru");
	int mas[3][3] = { {1,9,7},{2,1,3},{6,4,1}};
	for (int i = 0; i < 3; i++) {
		for (int j = 0; j < 3; j++) {
			cout << mas[i][j];
		}
		cout << endl;
	}
		cout << "Введите номер строки и столбца(1-3)";
		cin >> p;//строка
		cin >> n;//столбец
		p -= 1;
		n -= 1;
		if (p == n) {
			for (int j = 0; j < 3; j++) {
				int y = mas[p][j];
				mas[p][j] = mas[j][n];
				mas[j][n] = y;
			}
			for (int i = 0; i < 3; i++) {
				for (int j = 0; j < 3; j++) {
					cout << mas[i][j];
				}
				cout << endl;
			}
		}
		else {
			if (p < n) {
				for (int j = 0; j < 3; j++) {

					int y = mas[p][j];
					mas[p][j] = mas[j][n];
					mas[j][n] = y;
					if (j == 2) { mas[j][j] = mas[p][p]; }
				}
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						cout << mas[i][j];
					}
					cout << endl;
				}
			}
			else {
				for (int j = 0; j < 3; j++) {
					int y = mas[p][j];
					mas[p][j] = mas[j][n];
					mas[j][n] = y;
					if (j == 2) {
						mas[j][j] = mas[n][n];
					}
				}
				for (int i = 0; i < 3; i++) {
					for (int j = 0; j < 3; j++) {
						cout << mas[i][j];
					}
					cout << endl;
				}
			}
		}
			return 0;
}
